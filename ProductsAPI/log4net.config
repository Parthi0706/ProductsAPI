<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="DebugAppender" type="log4net.Appender.DebugAppender" ><!--Provider-->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" /> <!--Log writing pattern-->
		</layout>
	</appender>
	<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
		<!--Provider-->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
		</layout>
	</appender>
	<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
		<file value="ProductsAPI.log" /> <!--Log storage path with file name-->
		<rollingStyle value="Composite" /><!--Once, Size, Date, Composite- is combinnation of Date and Size-->
		<appendToFile value="true" />
		<maximumFileSize value="500KB" /><!--After crossing the this size of file new file will be created-->
		<maxSizeRollBackups value="5" /><!--How manybackup files need to be kept-->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %5level %logger.%method [%line] - MESSAGE: %message%newline %exception" />
			<!--Log writing pattern-->
		</layout>
	</appender>
	<root>
		<level value="ALL"/><!--ALL-Trace, DEBUG, INFO, WARN,ERROR,FATAL-Critical, OFF-->
		<appender-ref ref="DebugAppender" /> <!--Initialization of type of Log Writing for While debug-->
		<appender-ref ref="ConsoleAppender" /> <!--Initialization of type of Log Writing for Console writing-->
		<appender-ref ref="RollingFile" /> <!--Initialization of type of Log Writing for File Writing-->
	</root>
</log4net>
